<div id="saveContainer">


<h1 class="text-center">Saved Articles</h1>

<div id="article">
    {{#each articles}}
    <div class="hdlbarArticleDiv">
        <h2 id="articleTitle">{{title}}</h2>
        <p class="articleLink">{{link}}</p>
        <p>{{paragraph}}</p>
        <div class="btnGroup">


            <button class="btn btn-primary btnAddNotes"  data-toggle="modal" data-target="#exampleModal" data-id={{_id}}>Add Notes</button>
            <button class="btn btn-danger btnDeleteArticle" data-id={{_id}}>Delete Article</button>
        </div>
    </div>
    {{/each}}
</div>
</div>
            {{!-- <button class="btn btn-primary btnAddNotes" data-toggle="modal" data-target="#exampleModal" data-id={{_id}}>Add Notes</button> --}}

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
      
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Notes for the article :</h5>
        <h5 class="modal-title" id="exampleModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <div>
             <h3>List of notes</h3>
             <div id="listOfNotes">

             </div>
          </div>
      <textarea rows="6" cols="63" id="txtNotes" placeholder="Writes your notes here..."></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary btnSaveNotes">Save Notes</button>
      </div>
    </div>
  
  </div>
</div>